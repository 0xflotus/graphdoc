{{!
 Only navs varaible is defined:
 @example:
    navs: [
        {
            title: String,
            items: [
                {
                    href: String,
                    text: String
                }

                -- MORE ITEMS ---
            ]
        }

        -- MORE NAVS --
    ]
}}{{#navs}}
<div class="slds-grid slds-grid--vertical slds-p-around--small slds-col--rule-right">
    <h4 class="slds-text-heading--label">{{title}}</h4>
    <ul class="slds-navigation-list--vertical slds-has-block-links--space">
        {{#items}}
        <li {{#isActive}}class="slds-is-active"{{/isActive}}>
            <a href="{{{href}}}" class="slds-navigation-list--vertical__action slds-text-link--reset slds-truncate">{{{text}}}</a>
        </li>
        {{/items}}
    </ul>
</div>
{{/navs}}